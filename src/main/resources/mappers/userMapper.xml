<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vphum.service.frontend.repository.mapper" >
    <resultMap id="BaseResultMap" type="com.vphum.service.frontend.repository.dao.User" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="INTEGER" />
        <result column="sex" property="sex" jdbcType="VARCHAR" />

    </resultMap>

    <sql id="Base_Column_List" >
        id,,name,phone,sex
    </sql>

    <!--通过过期时间查询cart表的有效购物车-->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" >
        select <include refid="Base_Column_List" />
        from user
        where id = #{id,jdbcType=BIGINT}
    </select>

    <detele id="deleteByPrimaryKey">
        delete from user where id = #{id,jdbcType=BIGINT}
    </detele>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.vphum.service.frontend.repository.dao.User">
        insert into user (name, phone, sex)
        values (#{name,jdbcType=VARCHAR}, #{phone,jdbcType=INTEGER}, #{sex,jdbcType=VARCHAR})
    </insert>

    <!--通过过期时间查询cart表的有效购物车-->
    <select id="selectAll" resultMap="BaseResultMap" >
        select <include refid="Base_Column_List" />
        from user
    </select>

    <update id="updateByPrimaryKey" parameterType="com.vphum.service.frontend.repository.dao.User">
        update user set name = #{name,jdbcType=VARCHAR}, phone = #{phone,jdbcType=INTEGER}, sex = #{sex,jdbcType=VARCHAR} where id = #{id,jdbcType=BIGINT}
    </update>

  </mapper>